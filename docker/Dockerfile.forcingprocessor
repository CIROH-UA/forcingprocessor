ARG TAG_NAME="latest"
FROM awiciroh/forcingprocessor-deps:${TAG_NAME} AS forcingprocessor_base
COPY forcingprocessor/ /ngen-datastream/forcingprocessor/
RUN pip3 install -e /ngen-datastream/forcingprocessor && \
    groupadd -r mygroup && useradd -r -g mygroup myuser && \
    chown -R myuser:mygroup /ngen-datastream
